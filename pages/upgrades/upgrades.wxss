.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  height: 100%;
  padding: 20px;
}

.title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
}

.upgrade-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  border-bottom: 1px solid #eee;
  padding: 10px 0;
}

.upgrade-name {
  font-size: 20px;
}

.upgrade-description {
  color: #888;
  font-size: 16px;
}

.upgrade-btn {
  color: #1aad19;
}
